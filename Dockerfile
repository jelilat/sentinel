FROM node:20-slim AS builder

WORKDIR /app

COPY package.json package-lock.json* ./
RUN npm ci

COPY tsconfig.json ./
COPY src/ src/

RUN npm run build

FROM node:20-slim

WORKDIR /app

COPY package.json package-lock.json* ./
RUN npm ci --omit=dev

COPY --from=builder /app/dist/ dist/
COPY services.yaml ./
# Optional: include agents.yaml if it exists (glob trick â€” no error if missing)
COPY agents.yam[l] ./

USER node

EXPOSE 8080

CMD ["node", "dist/index.js"]
